{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "outDir": "./built/",
    "sourceMap": true,
    "strict": true,
    "downlevelIteration": true
  },
  "paths": {
    "~/*": ["./src/*"],
    "@/*": ["./src/*"]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules/**/+"
  ]
}